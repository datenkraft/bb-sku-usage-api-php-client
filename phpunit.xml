<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php">

    <!-- Testsuite for contract tests with Pact -->
    <testsuites>
        <testsuite name="Pact">
            <directory>tests/Pact/</directory>
        </testsuite>
    </testsuites>

    <!-- PHPUnit Listener to write and publish the results to the pact broker -->
    <listeners>
        <listener class="Pact\Listener\DatenkraftPactTestListener">
            <arguments>
                <array>
                    <element key="0">
                        <string>Pact</string>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>

    <!-- Environment variables for testing -->
    <php>
        <env name="PACT_MOCK_SERVER_HOST" value="pact-mock-service"/>
        <env name="PACT_MOCK_SERVER_PORT" value="30287"/>
        <env name="PACT_CONSUMER_NAME" value="skuUsageConsumer"/>
        <env name="PACT_CONSUMER_VERSION" value="1.0.0"/>
        <env name="PACT_CONSUMER_TAG" value="main"/>
        <env name="PACT_PROVIDER_NAME" value="skuUsageProvider"/>
        <env name="PACT_OUTPUT_DIR" value="pacts"/>
        <env name="PACT_MOCK_SERVER_HEALTH_CHECK_TIMEOUT" value="10"/>
        <env name="PACT_BROKER_URI" value="https://datenkraft.pactflow.io/"/>
        <env name="PACT_BROKER_BEARER_TOKEN" value="Nn10zhsOIaNxghh4k0SqGw"/>
    </php>

</phpunit>
